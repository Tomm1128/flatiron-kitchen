<%= form_for @recipe do |f|%>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :ingredients %><br>
    <%= f.collection_check_boxes :ingredient_ids, @ingredients, :id, :name %><br>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
